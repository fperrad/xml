## arguments we want to run parrot with
PARROT_ARGS   :=

## configuration settings
VERSION       := @versiondir@
BIN_DIR       := @bindir@
LIB_DIR       := @libdir@$(VERSION)
DOC_DIR       := @docdir@$(VERSION)
MANDIR        := @mandir@$(VERSION)

# Various paths
PERL6GRAMMAR  := $(LIB_DIR)/library/PGE/Perl6Grammar.pbc
NQP           := $(LIB_DIR)/languages/nqp/nqp.pbc
PCT           := $(LIB_DIR)/library/PCT.pbc

## Setup some commands
MAKE          := @make_c@
PERL          := @perl@
CAT           := @cat@
CHMOD         := @chmod@
CP            := @cp@
MKPATH        := @mkpath@
RM_F          := @rm_f@
RM_RF         := @rm_rf@
POD2MAN       := pod2man
PARROT        := $(BIN_DIR)/parrot@exe@
#IF(darwin):
#IF(darwin):# MACOSX_DEPLOYMENT_TARGET must be defined for OS X compilation/linking
#IF(darwin):export MACOSX_DEPLOYMENT_TARGET := @osx_version@

SAX_XML_SOURCES := \
  xml/sax/xml/gen_grammar.pir \
  xml/sax/xml/gen_actions.pir \
  xml/sax/xml/gen_builtins.pir \
  xml/sax/xml/xml.pir

SAX_XML_BUILTINS_PIR := \
  xml/sax/xml/builtins/char_ref.pir \
  xml/sax/xml/builtins/fire.pir \
  xml/sax/xml/builtins/normalize.pir

HANDLER_XMLWRITER_SOURCES := \
  xml/handler/xmlwriter/gen_actions.pir \
  xml/handler/xmlwriter/gen_builtins.pir \
  xml/handler/xmlwriter/xmlwriter.pir

HANDLER_XMLWRITER_BUILTINS_PIR := \
  xml/handler/xmlwriter/builtins/escape.pir \
  xml/handler/xmlwriter/builtins/print.pir \
  xml/handler/xmlwriter/builtins/throw.pir

DOCS := README

BUILD_CLEANUPS := \
  "xml/sax/*.pbc" \
  "xml/sax/xml/gen_*.pir" \
  "xml/handler/*.pbc" \
  "xml/handler/xmlwriter/gen_*.pir" \
  "*.pbc" \
#IF(win32):  parrot-xml.iss \
#IF(win32):  "setup-parrot-*.exe" \

# the default target
build: xml.pbc xml/sax/xml.pbc xml/handler/xmlwriter.pbc

all: build

xml.pbc: xml.pir
	$(PARROT) $(PARROT_ARGS) -o xml.pbc xml.pir

xml/sax/xml.pbc: $(SAX_XML_SOURCES)
	$(PARROT) $(PARROT_ARGS) -o xml/sax/xml.pbc xml/sax/xml/xml.pir

xml/sax/xml/gen_grammar.pir: $(PERL6GRAMMAR) xml/sax/xml/pct/grammar.pg
	$(PARROT) $(PARROT_ARGS) $(PERL6GRAMMAR) \
	    --output=xml/sax/xml/gen_grammar.pir \
	    xml/sax/xml/pct/grammar.pg

xml/sax/xml/gen_actions.pir: $(NQP) xml/sax/xml/pct/actions.pm
	$(PARROT) $(PARROT_ARGS) $(NQP) --output=xml/sax/xml/gen_actions.pir \
	    --target=pir xml/sax/xml/pct/actions.pm

xml/sax/xml/gen_builtins.pir: $(SAX_XML_BUILTINS_PIR)
	$(CAT) $(SAX_XML_BUILTINS_PIR) > xml/sax/xml/gen_builtins.pir

xml/handler/xmlwriter.pbc: $(HANDLER_XMLWRITER_SOURCES)
	$(PARROT) $(PARROT_ARGS) -o xml/handler/xmlwriter.pbc xml/handler/xmlwriter/xmlwriter.pir

xml/handler/xmlwriter/gen_actions.pir: $(NQP) xml/handler/xmlwriter/pct/actions.pm
	$(PARROT) $(PARROT_ARGS) $(NQP) --output=xml/handler/xmlwriter/gen_actions.pir \
	    --target=pir xml/handler/xmlwriter/pct/actions.pm

xml/handler/xmlwriter/gen_builtins.pir: $(HANDLER_XMLWRITER_BUILTINS_PIR)
	$(CAT) $(HANDLER_XMLWRITER_BUILTINS_PIR) > xml/handler/xmlwriter/gen_builtins.pir

Makefile: Makefile.in
	$(PARROT) Configure.pir

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  build:             xml.pbc xmlwriter.pbc"
	@echo "                     This is the default."
	@echo "  all:               xml.pbc xmlwriter.pbc"
	@echo ""
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: build
	prove --exec=$(PARROT) t//*.t

install:
	-$(MKPATH) $(LIB_DIR)/library/xml/sax
	$(CP) xml/sax/xml.pbc $(LIB_DIR)/library/xml/sax/xml.pbc
	-$(MKPATH) $(LIB_DIR)/library/xml/handler
	$(CP) xml/handler/xmlwriter.pbc $(LIB_DIR)/library/xml/handler/xmlwriter.pbc

uninstall:
	$(RM_F) $(LIB_DIR)/library/xml/sax/xml.pbc
	$(RM_F) $(LIB_DIR)/library/xml/handler/xmlwriter.pbc

testclean:

clean:
	$(RM_F) $(BUILD_CLEANUPS)

realclean:
	$(RM_F) $(BUILD_CLEANUPS) Makefile

distclean: realclean

